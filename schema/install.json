{
  "properties": {
    "mongo_url": {
      "type": "string",
      "description": "Mongo URL",
      "default": "mongodb://localhost:27017/",
      "required": true
    },
    "mongo_table": {
      "type": "string",
      "description": "Mongo Table",
      "default": "users-register"
    },
    "mongo_prefix": {
      "type": "string",
      "description": "Mongo prefix(db)",
      "default": "mfw"
    },
    "mongo_options": {
      "type": "string",
      "description": "Mongo Options (example: ?replicaSet=rs1&slaveOk=true)",
      "default": ""
    },
    "login_min_length": {
      "type": "number",
      "description": "Minimum length for login",
      "default": 3,
      "required": true
    },
    "login_max_length": {
      "type": "number",
      "description": "Maximum length for login",
      "default": 32,
      "required": true
    },
     "permission_path": {
      "type": "string",
      "description": "Path to the folder with permissions by role"
    },
    "default_ttl": {
      "type": "number",
      "description": "TTl of the token in sec. Default 3600.",
      "default": 6000,
      "required": true
    },
    "hostname": {
      "type": "string",
      "description": "IP or hostname of the server",
      "default": ""
    },
    "port": {
      "type": "number",
      "description": "Port",
      "default": 6003,
      "required": true
    },
    "workers": {
      "type": "number",
      "description": "Number of workers",
      "default": 2,
      "required": true
    },
    "self_path": {
      "type": "string",
      "description": "SELF PATH",
      "default": "users/login",
      "required": true
    },
    "self_url": {
      "type": "string",
      "description": "SELF URL",
      "default": "http://localhost:6003/",
      "required": true
    },
    "router_url": {
      "type": "string",
      "description": "ROUTER URL ",
      "default": "http://localhost:3000",
      "required": true
    },
    "router_proxy_url": {
      "type": "string",
      "description": "ROUTER PROXY URL ",
      "default": "http://localhost:3100",
      "required": true
    },
    "router_secret": {
      "type": "string",
      "description": "ROUTER SECRET. Take it from microservice-router settings.",
      "default": "",
      "required": true
    },
    "router_period": {
      "type": "number",
      "description": "How often report to router (ms)",
      "default": 3000,
      "required": true
    },
    "scope": {
      "type": "string",
      "description": "Scope",
      "default": "users-login",
      "required": true
    },
    "schema": {
      "type": "string",
      "description": "Do not change",
      "default": "login.json",
      "required": true
    }
  }
}
